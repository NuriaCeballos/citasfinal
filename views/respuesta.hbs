<main>

    <div class="container">
        <div class="row col-12">

            <div class="card" style="width: 35rem;">
                <ul class="list-group list-group-flush;">

                    <li class="list-group-item">{{newCita.firstname}}</li>
                    <li class="list-group-item">{{newCita.lastname}}</li>
                    <li class="list-group-item">{{newCita.email}}</li>
                    <li class="list-group-item">{{newCita.phone}}</li>
                    <li class="list-group-item">{{newCita.date}}</li>
                    <li class="list-group-item">{{newCita.hour}}</li>
                    <li class="list-group-item">LOCALIZADOR: {{newCita.id}}</li>

                </ul>

                <div class="row col-12 md-6 justify-content-center ">
                    <canvas id="canvas"></canvas>

                </div>
                <script src="/js/qrcode/build/qrcode.min.js"></script>
                <script>
                    QRCode.toCanvas(document.getElementById('canvas'),'{{newCita.firstname }} {{newCita.lastname}} {{newCita.email}} {{newCita.phone}} {{newCita.date}} {{newCita.id}} {{newCita.hour}}', function (error) {
                        if (error) console.error(error)
                        console.log('success!');
                    })
                </script>
            </div>
        </div>
    </div>
    </div>




</main>